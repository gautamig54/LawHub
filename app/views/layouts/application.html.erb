<!DOCTYPE html>
<html>
  <head>
    <title>LawHub</title>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>

  </head>

  <body>
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <div class ="searchbar">
          <%= form_tag(pages_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Pages" %>
            <%= submit_tag "Search", :name => nil %>
          <% end %>
        </div>
        </li>
        <% if user_signed_in? %>
            <li><%= link_to destroy_user_session_path, :method == :delete, class: "abc" do%>
                <i class="glyphicon glyphicon-log-out"></i> Sign out
              <% end %>
            </li>
          <%else%>
          <li><%= link_to  new_user_registration_path , class: "abc" do%>
              <i class="glyphicon glyphicon-user"></i> Sign in
            <% end %>
          </li>
            <li><%= link_to  new_user_session_path , class: "abc" do%>
                <i class="glyphicon glyphicon-log-in"></i> Log in
              <% end %>
            </li>
        <%end%>
      </ul>
    </div>
  </nav>

  <div class="sidenav">
    <h2> LawHub </h2>
    <p>
    <%= link_to pages_path, class: "abc" do%>
      <i class="glyphicon glyphicon-th-list"></i> Main Page
    <% end %>
    <%= link_to pages_criminal_path , class: "abc" do%>
      <i class="glyphicon glyphicon-pushpin"></i> Criminal
    <% end %>
    <%= link_to pages_civil_path , class: "abc" do%>
      <i class="glyphicon glyphicon-file"></i> Civil
    <% end %>
    <%= link_to pages_property_path , class: "abc" do%>
      <i class="glyphicon glyphicon-home"></i> Property
    <% end %>
    <%= link_to pages_income_tax_path , class: "abc" do%>
      <i class="glyphicon glyphicon-usd"></i> Income Tax
    <% end %>
    <%= link_to pages_education_path , class: "abc" do%>
      <i class="glyphicon glyphicon-education"></i> Education
    <% end %>
    <%= link_to pages_environmental_path , class: "abc" do%>
      <i class="glyphicon glyphicon-tree-deciduous"></i> Environmental
    <% end %>
    <%= link_to pages_entertainment_path , class: "abc" do%>
      <i class="glyphicon glyphicon-music"></i> Entertainment
    <% end %>
    <%= link_to pages_constitutional_path , class: "abc" do%>
      <i class="glyphicon glyphicon-book"></i> Constitutional
    <% end %>
    <%= link_to pages_about_path , class: "abc" do%>
      <i class="glyphicon glyphicon-option-vertical"></i> About Us
    <% end %>
    <%= link_to pages_how_to_path , class: "abc" do%>
      <i class="glyphicon glyphicon-question-sign"></i> How-to-Guides
    <% end %>
    <%= link_to pages_hire_path , class: "abc" do%>
      <i class="glyphicon glyphicon-user"></i> Hire Lawyers
    <% end %>
    <% if user_signed_in? %>
      <%= link_to  new_page_path, class: "abc" do%>
        <i class="glyphicon glyphicon-file"></i> New Page
      <% end %>
    <% end %>
  </p>
  </div>

  <footer>
    <p>Â© 2018 - 9Square Private Limited</p>
  </footer>

    <%= content_for?(:content) ? yield(:content) : yield %>
  </body>
</html>
